<apex:page controller="AccountViewController" lightningStylesheets="true">
  <apex:slds />

  <div class="slds-scope">
    <div class="slds-card slds-p-around_medium">
      <div class="slds-card__header slds-grid">
        <header class="slds-media slds-media_center slds-has-flexi-truncate">
          <div class="slds-media__body">
            <h2 class="slds-card__header-title">
              <span class="slds-text-heading_small">Account Overview</span>
            </h2>
          </div>
        </header>
      </div>

      <div class="slds-card__body slds-card__body_inner">
        <apex:pageMessages />

        <apex:pageBlock>
          <!-- The pageBlockTable renders our list of accounts -->
          <apex:pageBlockTable
            value="{!accountsWithOppCount}"
            var="wrapper"
            styleClass="slds-table slds-table_cell-buffer slds-table_bordered"
          >
            <apex:column
              headerValue="Account Name"
              value="{!wrapper.acc.Name}"
            />
            <apex:column
              headerValue="Industry"
              value="{!wrapper.acc.Industry}"
            />
            <apex:column
              headerValue="Number of Opportunities"
              value="{!wrapper.oppCount}"
            />
          </apex:pageBlockTable>
        </apex:pageBlock>
      </div>
    </div>
  </div>
</apex:page>
